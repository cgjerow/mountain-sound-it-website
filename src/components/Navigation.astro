---
import Logo from './logo.svg'
import { useMetadata } from 'astro:head';

const currentPath = Astro.url.pathname
const navClass = (ref) => {
  return ref===currentPath ? 'nav-item active' : 'nav-item'
}

---


<header class="header-nav">
    <a class="logo-header-link home-link" href="/">
       <div class="logo-header">
          <img src={Logo.src} alt="Logo" class="logo">
          <h1 class="logo-text">Mountain Sound IT</h1>
      </div>
    </a>

    <nav class="nav">
      <h2 class="visually-hidden">Top level navigation menu</h2>
      <button class="nav-button">â˜°</button>
      <ul class="nav-menu">
        <li class={navClass('/services')}><a href="/services">Services & Fees</a></li>
        <li class={navClass('/blogs')}><a href="/blogs">Blog</a></li>
      </ul>
    </nav>

    <nav id="overlay-nav">
      <button class="close-button" onclick="closeNav()">X</button>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/services">Services & Fees</a></li>
        <li><a href="/blogs">Blog</a></li>
      </ul>
    </nav>
</header>
<script>
  function openNav() {
  const nav = document.getElementById('overlay-nav');
  nav.classList.add('open');
}

function closeNav() {
  const nav = document.getElementById('overlay-nav');
  nav.classList.remove('open');
}
  document.querySelectorAll('button.nav-button').forEach(b => b.addEventListener('click', () => openNav()))
  document.querySelectorAll('button.close-button').forEach(b => b.addEventListener('click', () => closeNav()))
</script>

<style>
  .logo-header-link {
      margin-left: 3%;
      text-decoration: none; /* Remove underline from link */
      color: inherit; /* Inherit text color */
      display: inline-block; /* Allows for padding and centering */
  }

  .logo-header {
      display: flex; /* Align children in a row */
      align-items: center; /* Center vertically */
      gap: 0px; /* Space between logo and header */
  }

  .logo {
      width: auto; /* Adjust size as needed */
      height: 4rem;
  }

  .logo-text {
      font-size: 2rem;
  }

  /* https://www.a11yproject.com/posts/how-to-hide-content/ */
  .visually-hidden {
    clip: rect(0 0 0 0);
    clip-path: inset(50%);
    height: 1px;
    overflow: hidden;
    position: absolute;
    white-space: nowrap;
    width: 1px;
  }

  .header-nav {
    background: black;
    height: 80px;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 1000;
    display: flex;
    justify-content: left; /* Ensures spacing between the root link and other links */
    align-items: center; /* Centers items vertically */
  }

  .nav {
    margin-right: 3%;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    padding: 10px 20px;
  }

  .nav-menu {
    display: flex;
    gap: 20px;
  }

  .nav-menu li {
    position: relative;
  }

  .nav-menu a {
    display: block;
  }

  .nav-menu .dropdown-menu li a {
  }

  .nav-menu .dropdown:hover .dropdown-menu {
    display: flex;
  }

  .nav-button {
    color: white;
    background: none;
    border: none;
    font-size: 3rem;
  }
  .nav-button:hover {
    background-color: #1c1c1c;
  }
  @media screen and (min-width: 1200px) {
    .nav-button {
      display: none;
    }
  }


  .nav-item {
    list-style-type: none; /* Remove bullets */
    font-size: 1.5rem;
  }

  .active {
    text-decoration: underline;
    text-underline-offset: 3px;
  }

  @media screen and (max-width: 1199px) and (min-width: 768px) {
    .home-link {
      font-size: 2rem;
    }

    .nav-menu {
      display: none
    }

    .header-nav {
      justify-content: space-between;
    }
  }

  @media screen and (max-width: 767px) {
    .home-link {
      display: none;
    }

    .header-nav {
      justify-content: right;
      height: 50px;
    }

    .nav-button {
      font-size: 2rem;
    }

    .nav-menu {
      display: none;
      flex-direction: column;
      width: 100%;
      position: absolute;
      top: 100%;
      left: 0;
    }

    .nav-menu li {
      text-align: center;
    }

    .nav-menu.active {
      display: flex;
    }

    .nav-toggle {
      display: block;
      cursor: pointer;
    }

    .nav-toggle span {
      display: block;
      width: 25px;
      height: 3px;
      background: #fff;
      margin: 5px;
    }
  }


/* Full-page overlay navigation */
#overlay-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.95);
  color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  transform: translateY(-100%);
  transition: transform 0.3s ease-in-out;
  z-index: 999;
}

#overlay-nav ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

#overlay-nav li {
  margin: 20px 0;
}

#overlay-nav a {
  color: white;
  text-decoration: none;
  font-size: 24px;
}

#overlay-nav .close-button {
  position: absolute;
  top: 20px;
  right: 20px;
  background: none;
  border: none;
  color: white;
  font-size: 24px;
  cursor: pointer;
}

/* Show the overlay */
#overlay-nav.open {
  transform: translateY(0);
}
</style>
